<?xml version="1.0" encoding="utf-8"?>



<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTodoNazivConst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:text="Naziv" />

        <EditText
            android:id="@+id/etTodoNaziv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTodoNazivConst"
            android:paddingStart="20dp" />




        <TextView
            android:id="@+id/sPrioritetConst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_below="@+id/etTodoNaziv"

            android:text="Prioritet" />

        <Spinner
            android:id="@+id/sPrioritet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sPrioritetConst"
            android:paddingStart="10dp" />

        <TextView
            android:id="@+id/dpDatumZconst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sPrioritet"
            android:paddingStart="10dp"
            android:text="Datum zavrsetka" />

        <DatePicker
            android:id="@+id/dpDatumZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:layout_below="@id/dpDatumZconst"
            android:paddingStart="10dp" />

        <TextView
            android:id="@+id/tpVremeZConst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_below="@id/dpDatumZ"
            android:text="Vreme zavrsetka" />

        <TimePicker
            android:id="@+id/tpVremeZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_below="@id/tpVremeZConst"
            android:paddingStart="10dp" />

        <TextView
            android:id="@+id/sStatusConst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_below="@id/tpVremeZ"
            android:text="Status" />

        <Spinner
            android:id="@+id/sStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sStatusConst"
            android:paddingStart="10dp" />

        <Button
            android:id="@+id/bAddTodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sStatus"
            android:text="ADD" />

        <Button
            android:id="@+id/bCancelTodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bAddTodo"
            android:layout_below="@id/sStatus"
            android:text="Cancel" />

    </RelativeLayout>
</ScrollView>


